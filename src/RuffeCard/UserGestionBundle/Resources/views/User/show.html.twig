{% extends "RuffeCardUserGestionBundle:Administrateur:Menu.html.twig" %}

{% block corp -%}
     <div class="panel panel-primary" id="clientCorps">
			                <div class="panel-heading" id="clientModifPanel">
			                    <h2 class="panel-title">
			                    
			                        <span class="fa fa-user"></span> {% if Type=='1'%}{{('commerciaux')}}{% else%}{{('managers')}}{% endif %}
								</h2>
			                </div>
    

    <table class="record_properties table table-hover">
        <tbody>
            <!-- tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr-->
            <tr> 
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entity.prenom }}</td>
            </tr>
            <tr>
                <th><i class="fa fa-calendar"></i> Daybirth</th>
                <td>{{ entity.dayBirth|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{% if entity.sexe=='f'%}{{('<i class="fa fa-female"></i> ')}}{% else %}{{('<i class="fa fa-male"></i> ')}}{% endif %}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ entity.age }} ans</td>
            </tr>
            <tr>
                <th>Telfixe</th>
                <td>+590 {{ entity.telFixe }}</td>
            </tr>
            <tr>
                <th>Portable1</th>
                <td>+590 {{ entity.portable1 }}</td>
            </tr>
            <tr>
                <th>Portable2</th>
                <td>+590 {{ entity.portable2 }}</td>
            </tr> 
            <tr>
                <th>Port 3</th>
                <td>+590 {{ entity.portable3 }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
         
          
      
        </tbody>
    </table>

    <div class="row">
    
    
     
     <div class="col-md-12" id="listingClientcreer">
		 

     <div class="col-md-8" >
          <a href="{{ path('Admin_client_edit', { 'id': entity.id }) }}">
        	<button type="button" class="btn btn-primary">
        		<i class="fa fa-check-square-o"></i>
                Modifier
             </button>
        </a>
        {% if Type == 1  %}
       	<a href="{{ path('ChangeStatus',{'id':entity.id,'type':1}) }}">
        	<button type="button" class="btn btn-info">
        		<i class="fa fa-check-square-o"></i>
                Passer Manager
             </button>
        </a> 
        {% endif %}
        <a href="{{ path('Admin_client') }}">
        	<button type="button" class ="btn btn-warning">
        		<i class="fa fa-share-square-o"></i> 
        		Retour Listing		
             </button>
        </a>
        <a>
            <form action="{{ path('Admin_delete', { 'id': entity.id }) }}" method="post">
               <input type="hidden" name="_method" value="DELETE" />
             {{ form_widget(delete_form) }}
                <button type="submit" class="btn btn-danger" ><i class="fa fa-ban"></i>	Supprimer</button>
            </form>
        </a> 
        </div>     
      </div>
    </div>
  
</div>
{% endblock %}
