{% extends "RuffeCardUserGestionBundle::layout.html.twig" %}

{% block fos_user_content %}

<div class="container">
 
			           
<div class="row" style="margin-top: 120px;">

<form id="login2" class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
  <div class="col-xs-4 col-sm-4 col-md-4 col-md-offset-1 login-box">
    <img id="logo" alt="logo Ruffe Card" style="width:260px; float:right" src="{{asset ('images/logo.png')}}">
    </div>
  <div class="col-xs-4 col-sm-4 col-md-4 login-box" style="margin-top: 3px;
text-align: center;">  
     <h1 style="font-weight: bolder; text-align: center; " >Ruffe Card</h1>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
   
{#    	<div class="input-group">#}
{# 	   	<span class="input-group-addon"><span class="fa fa-user"></span></span>#}
{# 	    <input type="text" class="input-block-level" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d'utilisateur" /><br>#}
{# 	</div>#}
	
	<div class="input-group" style="margin: 30px 30px 10px 30px;">
    	<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Nom d'utilisateur" required autofocus />
    </div>
	
	<div class="input-group" style="margin: 0px 30px 0px 30px;">
    	<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
        <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe" size="7" required autofocus />
    </div>
	
	
{#     <input type="password" class="input-block-level" id="password" name="_password" placeholder="Mot de passe" ><br>#}

<br>
    <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="{{ 'Connexion'|trans({}, 'FOSUserBundle') }}" /><br>
    
    </div>
{% if error %}
    <div class="alert">{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
</form>

</div>
</div>

{% endblock  %}